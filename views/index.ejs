<%- include('header.ejs') %> 
    <h3>Create a new paste</h3>
    <form action="create/" method="POST">
        <div class="container">
            <div class="form-group">
                <label> Author</label>
                <input type="text" class="form-control col-lg-9" name ="author">
            </div>
            <div class="form-group">
                <label> Title</label>
                <input type="text" class="form-control col-lg-9" name ="title">
            </div>
            <div class="form-group">
                <label> Text</label>
                <textarea name="text" class="form-control col-lg-9"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" >Create</button>
        </div>
    </form>
</body>
</html>