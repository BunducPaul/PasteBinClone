<%- include('header.ejs') %>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>TITLE</th>
                <th>AUTHOR</th>
                <th>TEXT</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= data.title %>
                </td>
                <td>
                    <%= data.author %>
                </td>
                <td>
                    <%= data.text %>
                </td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary" onclick="copyToClipboard()">Copy Link</button>
    </body>
    <script>
        let link = "http://localhost:4000/pastebin/<%= data.commbin_id %>";
        function copyToClipboard() {
            navigator.clipboard.writeText(link);
        }
    </script>
    </html>